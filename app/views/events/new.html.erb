<%= form_with model: @event, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_area :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :max_participants %>
  <%= form.number_field :max_participants %>

  <%= form.label :max_group_size %>
  <%= form.number_field :max_group_size %>

  <%= form.label :open_date %>
  <%= form.date_field :open_date %>

  <%= form.label :deadline %>
  <%= form.date_field :deadline %>

  <%= form.submit %>
<% end %>